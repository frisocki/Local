##################################################
## Aliases
##################################################

alias ll  'ls -l'
alias la  'ls -al'
alias env 'env|sort'

##################################################
## Environment
##################################################

setenv EDITOR vim
setenv LESS '-r -I -g -J -s -w -n'
setenv SVN_EDITOR vim

##################################################
## Shell
##################################################
bindkey " " magic-space

set history  = 500
set savehist = 50

set path     = ($path)

set prompt   = "%B%{\033[34m%}%p %{\033[31m%}%n@%m[%h][%~]%% %{\033[30m%}%b"
